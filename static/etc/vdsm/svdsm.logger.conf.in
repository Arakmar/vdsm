# supervdsm logging configuration.
#
# Enabling threaded logging:
# 1. Add "logthread" to [handlers] keys
# 2. Replace "logfile" with "logthread" in all loggers "handlers" list.

[loggers]
keys=root,SuperVdsm,Gluster

[handlers]
keys=logfile

[formatters]
keys=long

[logger_root]
level=DEBUG
handlers=logfile
propagate=0

[logger_SuperVdsm]
level=DEBUG
handlers=logfile
qualname=SuperVdsm
propagate=0

[logger_Gluster]
level=DEBUG
handlers=logfile
qualname=Gluster
propagate=0

[handler_logthread]
class=vdsm.common.logutils.ThreadedHandler
args=[]
level=DEBUG
target=logfile

[handler_logfile]
class=vdsm.common.logutils.UserGroupEnforcingHandler
args=('root', 'root', '@VDSMLOGDIR@/supervdsm.log',)
level=DEBUG
formatter=long

[formatter_long]
format: %(threadName)s::%(levelname)s::%(asctime)s::%(module)s::%(lineno)d::%(name)s::(%(funcName)s) %(message)s
